@using MovieStoreApp.Models

@model Movie
@{
    ViewData["Title"] = "Details";
}

<style>
    .header {
        font-weight: bold;
    }
</style>

<h2>@Model.Title</h2>


<label class="header">IMDB Rating</label>
<p>@Model.IMDBRating</p>

<label class="header">Genre</label>
<p>@Model.Genre</p>

<label class="header">Price</label>
<p>@Model.Price</p>

<label class="header">Description</label>
<p>@Model.Description</p>